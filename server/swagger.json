{
  "openapi": "3.0.0",
  "info": {
    "title": "My CMS",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/admin-api/emails": {
      "get": {
        "tags": [
          "Emails"
        ],
        "summary": "Get all email templates",
        "description": "Retrieve all email templates with pagination and sorting",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "required": false,
            "description": "Sort by field in format field:order (e.g., created_at:asc)",
            "schema": {
              "type": "string",
              "pattern": "^[a-zA-Z_]+:(asc|desc)$",
              "example": "created_at:asc"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Page number (starting from 0)",
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 0
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "required": false,
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email templates retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "welcome-email"
                          },
                          "name": {
                            "type": "string",
                            "example": "Welcome New User"
                          },
                          "subject": {
                            "type": "string",
                            "example": "Welcome to Our Platform"
                          },
                          "content": {
                            "type": "string",
                            "example": "Hello {{first_name}},<br/><br/>\\n\\nWelcome to our platform!<br/>\\nWe're excited to have you on board.<br/><br/>\\n\\nBest regards,\\nThe Team"
                          }
                        }
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "page": {
                          "type": "integer",
                          "example": 0
                        },
                        "pageSize": {
                          "type": "integer",
                          "example": 20
                        },
                        "count": {
                          "type": "integer",
                          "example": 2
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Something went wrong",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Something went wrong"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Emails"
        ],
        "summary": "Create email template",
        "description": "Create a new email template",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Welcome New Customer"
                  },
                  "subject": {
                    "type": "string",
                    "example": "Welcome to Our Store"
                  },
                  "content": {
                    "type": "string",
                    "example": "Hello {{first_name}},<br/><br/>\\n\\nThank you for joining our store!<br/>\\nWe're excited to have you as a customer.<br/><br/>\\nStart shopping: {{store_url}}<br/><br/>\\nBest regards,\\nThe Sales Team"
                  }
                },
                "required": [
                  "name",
                  "subject",
                  "content"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email template created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Something went wrong",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Something went wrong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin-api/emails/{id}": {
      "delete": {
        "tags": [
          "Emails"
        ],
        "summary": "Delete email template",
        "description": "Delete an existing email template",
        "security": [
          {
